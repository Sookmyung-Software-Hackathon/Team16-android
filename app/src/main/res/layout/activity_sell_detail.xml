<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/gmarket"
        android:gravity="center"
        android:text="물품 정보"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_marginTop="100dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <View
                    android:layout_width="380dp"
                    android:layout_height="350dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/division_box2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="18dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_buy_detail"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:background="@android:color/transparent"
                        android:src="@drawable/noonsong"
                        app:civ_border_color="#686868"
                        app:civ_border_overlay="true"
                        app:civ_border_width="1.5dp" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gmarket"
                            android:gravity=""
                            android:text="김 민 진"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gmarket"
                            android:gravity="left"
                            android:text="2113264"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/thumbnailImageView"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/sell_item" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <View
                    android:layout_width="380dp"
                    android:layout_height="260dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/division_box2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="5dp"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/gmarket"
                        android:text="물품 이름"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="350dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/division_line" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/gmarket"
                        android:text="물픔 상세 정보 및 설명"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/division_box4"
                            android:fontFamily="@font/gmarket"
                            android:gravity="center"
                            android:text="채팅"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btn_request"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:background="@drawable/division_box3"
                            android:fontFamily="@font/gmarket"
                            android:gravity="center"
                            android:text="신청"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
